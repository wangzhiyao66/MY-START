.box {
  width: 100%;
  min-height: 1100rpx;
  background: #fff;
}

.title {
  font-family: Arial, Helvetica, sans-serif;
  font-weight: bold;
  font-size: 17px;
  color: #000;
  text-align: center;
  width: 100%;
  height: 30px;
}

.content {
  width: 75%;
  height: 800rpx;
  border: 1px solid #bcbcbc;
  margin: 20px auto 0;
  box-shadow: 0px 0px 30px #c7c7c7;
  border-radius: 20px;
}

.user-title {
  width: 100%;
  height: 35px;
  text-align: center;
  font-size: 13px;
  color: #bdbdbd;
  margin-top: 35px;
}
.user-title:hover{
  color: blueviolet;
}
/* box 内部  */

.userinfo {
  width: 100%;
  height: 150rpx;
  margin: 30px auto;
  /* border: 1px solid red; */
  text-align: center;
}
.userinfo-img{
  width: 65px;
  height: 65px;
  border-radius: 50%;
  margin: 0 auto ;
}
.user {
  width: 100%;
  height: 120rpx;
  margin: 15rpx auto 0px;
  /* border: 1px solid red; */
}

.btn_login {
  width: 100%;
  height: 100rpx;
  margin: 0px auto;
   /* border: 1px solid red;  */
}
.username{
  width: 80%;
  height: 35px;
  border: 1px solid #bdbdbd;
  border-radius: 20px;
  margin: 0 auto;
  padding-left:10px;
  box-sizing: border-box; 
}
.password{
  width: 80%;
  height: 35px;
  border: 1px solid #bdbdbd;
  border-radius: 20px;
  margin: 0 auto;
  padding-left:10px;
  box-sizing: border-box; 
}